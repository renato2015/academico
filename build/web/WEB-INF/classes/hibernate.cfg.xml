<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root99</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/projeto_academico?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.show_sql">true</property>

    <mapping class="com.br.projeto_academico.model.BeanAluno"></mapping>
    <mapping class="com.br.projeto_academico.model.BeanLogin"></mapping>
    <mapping class="com.br.projeto_academico.model.BeanProfessor"></mapping>
  </session-factory>
</hibernate-configuration>
